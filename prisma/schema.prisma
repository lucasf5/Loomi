generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserType {
  ADMIN
  CLIENT
}

enum OrderStatus {
  RECEIVED
  IN_PREPARATION
  DISPATCHED
  DELIVERED
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  type      UserType
  Cart      Cart?
  Order     Order[]
}
